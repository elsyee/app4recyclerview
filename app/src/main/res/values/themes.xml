<!-- res/values/themes.xml -->
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Tema utama aplikasi -->
    <style name="Theme.MyLibraryApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Warna utama diambil dari logo -->
        <item name="colorPrimary">#F28C28</item> <!-- Oranye dari buku -->
        <item name="colorPrimaryVariant">#D97706</item>
        <item name="colorOnPrimary">#FFFFFF</item>

        <item name="colorSecondary">#6BBF59</item> <!-- Hijau dari simbol sinyal & garis -->
        <item name="colorSecondaryVariant">#4CAF50</item>
        <item name="colorOnSecondary">#FFFFFF</item>

        <!-- Warna background -->
        <item name="android:windowBackground">@drawable/bg_splash</item>

        <!-- Status bar & navigation bar -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:navigationBarColor">?attr/colorPrimary</item>

        <!-- Menonaktifkan action bar -->
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="Theme.MainActivity" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowBackground">@color/white</item>
    </style>

</resources>
